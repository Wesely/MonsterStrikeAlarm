<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tw.wesely.mstrikealarm"
    android:versionCode="6"
    android:versionName="1.1.3" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="tw.wesely.mstrikealerm.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tw.wesely.archives.ArchiveDetailActivity"
            android:label="@string/activity_archive"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="tw.wesely.archives.MonsterArchive"
            android:label="@string/activity_archive"
            android:screenOrientation="portrait" >
        </activity>

        <receiver android:name="tw.wesely.mstrikealerm.TurtleAlarmReceiver" />
    </application>

</manifest>